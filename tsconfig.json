{
  "compilerOptions": {
    "baseUrl": "./src",
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "target": "es2015",
    "inlineSourceMap": true,
    "strict": true,
    "rootDirs": ["./src", "./tests"],
    "outDir": "./bin",
    "lib": [
      "es2015",
      "dom"
    ]
  },
  "include": [
    "src/**/*",
    "tests/cypress/**/*",
    "node_modules/cypress/**/*"
  ],
  "exclude": [
    "tmp"
  ]
}